/**
 * @description This ruleset enforces a public read, owner-write model for products, and restricts customer data access to authenticated users.
 * @dataStructure
 *  - /products/{productId}: Publicly readable product catalog. Only authenticated users can create, update, or delete products.
 *  - /customers/{customerId}: Stores customer profiles. Only authenticated users can create customer profiles.
 * @keySecurityDecisions
 *  - Public Read Access for Products: The product catalog is publicly readable to allow browsing without authentication.
 *  - Owner-Only Writes for Products: Only authenticated users can modify product information, preventing unauthorized changes.
 *  - Authenticated User Access for Customers:  Only authenticated users are able to create customer profiles.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read products, but only authenticated users can create, update, or delete them.
     * @path /products/{productId}
     * @allow (get, list): Any user can read product information.
     * @allow (create): An authenticated user can create a product with valid data.
     * @allow (update, delete): An authenticated user can update or delete a product.
     * @deny (create, update, delete): An unauthenticated user cannot create, update, or delete products.
     * @principle Enforces public read access with owner-only writes for the product catalog.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows authenticated users to create customer profiles.
     * @path /customers/{customerId}
     * @allow (create): An authenticated user can create their own customer profile.
     * @deny (get, list, update, delete): Not granted by these rules.
     * @principle Enforces authenticated access for customer profiles.
     */
    match /customers/{customerId} {
      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
  }
}